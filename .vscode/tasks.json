{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-and-run-cpp",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "mkdir -Force build; g++ \"${file}\" -std=c++17 -O2 -o \"build/${fileBasenameNoExtension}.exe\"; if ($?) { \"build/${fileBasenameNoExtension}.exe\" }"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
