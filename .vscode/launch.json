// launch.json (디버그 거의 안 쓰면 유지용)
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ (build)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "preLaunchTask": "build active cpp (to build)"
    }
  ]
}
